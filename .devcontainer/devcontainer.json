{
	"name": "samlless-reverse-proxy",

	"build": {
		"dockerfile": "Dockerfile"
	},

	"workspaceMount": "source=${localWorkspaceFolder},target=/home/remote/workspace/samlless-reverse-proxy,type=bind",
	"workspaceFolder": "/home/remote/workspace/samlless-reverse-proxy",
	// TODO: add go cache and go mod cache mounts

	"features": {
		"ghcr.io/devcontainers/features/git:1": {},
		"ghcr.io/devcontainers/features/docker-in-docker:2": {}
	},

	"forwardPorts": [3000, 3001, 3002, 3003],

	"remoteUser": "remote",
	"postCreateCommand": "bash .devcontainer/post-create.sh",

	"customizations": {
		"vscode": {
			"extensions": ["golang.go", "esbenp.prettier-vscode"]
		}
	}
}
